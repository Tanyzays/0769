// ==UserScript==
// @name         Yandex bot
// @namespace    http://tampermonkey.net/
// @version      0.1
// @description  try to take over the world!
// @author       Tany Zays
// @match        https://yandex.ru/*
// @icon         data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==
// @grant        none
// ==/UserScript==

let keywords = ["флейта", "саксофон", "гобой"];
let keyword = keywords[getRandom(0, keywords.length)];


let btnK = document.getElementsByClassName('button mini-suggest__button button_theme_search button_size_search i-bem button_js_inited')[0];
let links = document.links;

if (btnK !== undefined) {
    document.getElementsByName('text')[0].value = keyword;
    btnK.click();
} else {
    for (let i=0; i<links.length; i++ ) {
        if (links[i].href.includes('rock-and-roll.ru')){
            let link = links[i];
            console.log("Найдена строка " + link)
            link.click();
            break;
        }
    }
}
function getRandom(min,max) {
    return Math.floor(Math.random()*(max-min)+min);
}
